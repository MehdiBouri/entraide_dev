{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{parent()}}
    {{ encore_entry_link_tags('index') }}
{% endblock %}
{% block javascripts %}
    {{parent()}}
    {{ encore_entry_script_tags('index') }}
{% endblock %}

{% block title %}{{ post.title }}{% endblock %}

{% block body %}
    <h1>{{ post.title }}</h1>

    <div class="list-group">
        <div href="#" class="list-group-item list-group-item-action">
            <div class="d-flex w-100 justify-content-between">
            <h5 class="mb-1"></h5>
            <small class="text-muted">{{ post.createdat|date("d/m/Y à H:i") }}</small>
            </div>
            <p>{{ post.content }}</p>
        </div>
    </div>

    {% if app.user %}
        <div class="formulaire">
            <h2>Commentaires</h2>
            {{ form_start(formComment) }}
                {{ form_row(formComment.content) }}
                <div class="col-12">
                    <button type="submit" class="btn btn-secondary">Envoyer</button>
                </div>
            {{ form_end(formComment) }}
        </div>
    {% else %}
        <p class="text-center">Connectez-vous pour ajouter un commentaire</p>
    {% endif %}



    {% for comment in comments %}
    <div class="list-group">
        <div href="#" class="list-group-item list-group-item-action">
            <div class="d-flex w-100 justify-content-between">
            <small class="text-muted">{{ comment.createdat|date("d/m/Y à H:i") }}</small>
            </div>
            <p>{{ comment.content }}</p>
        </div>
    </div>
    {% endfor %}
{% endblock %}


